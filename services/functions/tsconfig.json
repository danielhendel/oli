{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["ES2022"],
      "types": ["node"],
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "../../apps/**",
      "../../node_modules/@types/react-native/**"
    ]
  }
  