{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "rootDir": ".",
    "outDir": "dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@oli/contracts": ["./lib/contracts/index.ts"],
      "@oli/contracts/*": ["./lib/contracts/*"]
    }
  },
  "include": ["src/**/*.ts", "lib/contracts/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
