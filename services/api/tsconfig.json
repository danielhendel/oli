{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "rootDir": ".",
    "outDir": "dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "../../lib/contracts/tsconfig.json" }],
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}