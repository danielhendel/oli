{
  "name": "oli",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint apps/mobile services/api services/functions --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest"
  },
  "dependencies": {
    "expo": "~53.0.22",
    "expo-router": "~5.1.5",
    "expo-status-bar": "~2.2.3",
    "firebase": "^12.2.1",
    "jest-expo": "~53.0.10",
    "react": "19.0.0",
    "react-native": "0.79.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/apps/mobile/jest-setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?expo|@expo(nent)?/.*|@expo-google-fonts/.*|react-native|@react-native(-community)?/.*|@react-navigation/.*|firebase/.*)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/apps/mobile/$1"
    }
  }
}
