{
  "name": "oli",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "workspaces": [
    "lib/contracts",
    "services/api",
    "services/functions"
  ],
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build": "npm run -w @oli/contracts build && npm run -w api build",
    "start:api": "npm run -w api start",
    "typecheck": "tsc -b",
    "lint": "eslint app components lib services --ext .ts,.tsx --max-warnings=0 --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/dist-types/**\" --ignore-pattern \"**/*.d.ts\" --ignore-pattern \"services/functions/lib/**\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node scripts/test/run-jest-with-firestore-emulator.mjs",
    "check:invariants": "node scripts/ci/check-invariants.mjs",
    "check:expo-resolution": "node scripts/ci/check-expo-resolution.mjs",
    "check:client-trust-boundary": "node scripts/ci/assert-client-trust-boundary.mjs",
    "proof:phase1": "bash scripts/ci/proof-gate.sh",
    "proof:phase2": "bash scripts/ci/proof-gate-phase2.sh",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@firebase/auth": "1.12.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "expo": "~53.0.27",
    "expo-asset": "~11.1.7",
    "expo-clipboard": "~7.1.5",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.11",
    "expo-status-bar": "~2.2.3",
    "expo-web-browser": "~14.2.0",
    "firebase": "^12.7.0",
    "react": "19.0.0",
    "react-native": "0.79.6",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/js": "^9.39.2",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@google-cloud/pubsub": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "~19.0.10",
    "@types/react-native": "^0.72.8",
    "babel-plugin-module-resolver": "^5.0.2",
    "cors": "^2.8.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "express": "^4.19.2",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.6.0",
    "firebase-tools": "^13.11.2",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.14",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "rate-limiter-flexible": "^5.0.5",
    "supertest": "^7.2.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.50.1",
    "zod": "^3.23.8"
  },
  "overrides": {
    "@react-native-async-storage/async-storage": "2.1.2",
    "@expo/config-plugins": "~10.1.2"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/test/jest.setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?expo|@expo(nent)?/.*|@expo-google-fonts/.*|react-native|@react-native(-community)?/.*|@react-navigation/.*|firebase/.*)"
    ],
    "moduleNameMapper": {
      "^@/lib/(.*)$": "<rootDir>/lib/$1",
      "^@/(.*)$": "<rootDir>/app/$1",
      "^@oli/contracts$": "<rootDir>/lib/contracts/index.ts",
      "^@oli/contracts/(.*)$": "<rootDir>/lib/contracts/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/build/",
      "<rootDir>/coverage/",
      "<rootDir>/archive/",
      "<rootDir>/dist-types/",
      "<rootDir>/services/functions/lib/",
      "<rootDir>/services/api/lib/",
      "<rootDir>/services/api/dist/",
      "<rootDir>/services/api/dist-types/",
      "\\.d\\.ts$"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/archive/",
      "<rootDir>/dist-types/",
      "<rootDir>/services/functions/lib/",
      "<rootDir>/services/api/lib/",
      "<rootDir>/services/api/dist/",
      "<rootDir>/services/api/dist-types/"
    ]
  }
}
