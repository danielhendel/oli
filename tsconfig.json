{
  "compilerOptions": {
    /* ✅ HealthOS Great Code Standard: strict, scalable TS defaults */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,

    /* ✅ Expo Router / RN */
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ✅ Project structure (root app is canonical) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ✅ Jest + Node types only (do NOT include "expo" here) */
    "types": ["jest", "node"]
  },
  "include": [
    "app/**/*",
    "lib/**/*",
    "src/**/*",
    "types/**/*",
    "services/**/*",
    "scripts/**/*",
    "*.ts",
    "*.tsx",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".expo",
    "android",
    "ios"
  ]
}
