# Backend base URL (used to compute redirect_uri)
BACKEND_BASE_URL=http://localhost:8080

# HMAC secret for OAuth state (use a long random value in prod)
JWT_STATE_SECRET=change-me-dev-secret

# Frontend origin for CORS (set HTTPS origin in prod)
FRONTEND_ORIGIN=http://localhost:19006

# Oura OAuth
OURA_CLIENT_ID=your-oura-client-id
OURA_CLIENT_SECRET=your-oura-client-secret
OURA_WEBHOOK_SECRET=dev-oura-webhook-secret

# Withings OAuth (optional now; wire when ready)
WITHINGS_CLIENT_ID=your-withings-client-id
WITHINGS_CLIENT_SECRET=your-withings-client-secret

# Firebase emulator (local only)
FIRESTORE_EMULATOR_HOST=localhost:8081
GCLOUD_PROJECT=demo-oli
