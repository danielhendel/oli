{
  "firestore": {
    "rules": "services/functions/firestore.rules",
    "indexes": "services/functions/firestore.indexes.json"
  },
  "functions": {
    "source": "services/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "ignore": [
      "**/*.map",
      "**/src/**",
      "**/__tests__/**",
      "**/*.test.*",
      "node_modules/.cache/**",
      "firebase-debug.log"
    ]
  }
}
