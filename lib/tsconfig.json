{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../dist-types/lib",
    "tsBuildInfoFile": "../node_modules/.cache/tsbuildinfo/lib.tsbuildinfo",

    "baseUrl": "..",
    "paths": {
      "@/*": ["./*"]
    },

    "composite": true,
    "noEmit": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "**/*.test.*",
    "**/__tests__/**",
    "../node_modules",
    "../dist",
    "../dist-types",
    "../build",
    "../coverage"
  ]
}
